<UserControl x:Class="MGA.UserControls.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MGA.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{Binding BackGround}">
        <StackPanel Orientation="Horizontal" Background="{Binding BackGround}" 
                        Grid.Column="1" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,10,0">
            <Button Click="Click_Reduire" Style="{StaticResource StyleButtonNavBar}">
                <Image Source="/Images/Bar/Reduire.png" Width="15" Height="15" />
            </Button>
            <Button Click="Click_Fermer" Style="{StaticResource StyleButtonNavBar}">
                <Image Source="/Images/Bar/Fermer.png" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
